<?xml version="1.0" encoding="utf-8"?>

<!-- Layout de la actividad principal de la aplicaci칩n -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lluismasdeu.pprog2_p_final.MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/form_vertical_margin"
        android:paddingRight="@dimen/form_vertical_margin">

        <!-- Logo de la aplicaci칩n -->
        <ImageView
            android:id="@+id/logo_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        <!-- Nombre de usuario -->
        <TextView
            android:id="@+id/username_textView"
            android:text="@string/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_imageView" />

        <EditText
            android:id="@+id/username_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_textView"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <!-- Contrase침a del usuario -->
        <TextView
            android:id="@+id/password_textView"
            android:text="@string/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_editText" />

        <EditText
            android:id="@+id/password_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_textView"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <!-- Boton para iniciar sesi칩n -->
        <Button
            android:id="@+id/login_button"
            android:text="@string/login"
            android:background="@color/loginButtonColor"
            android:onClick="onLoginButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/password_editText"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <!-- Boton para registrar usuario -->
        <Button
            android:id="@+id/register_button"
            android:text="@string/register"
            android:background="@color/registerButtonColor"
            android:onClick="onRegisterButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/login_button" />
    </RelativeLayout>
</ScrollView>
